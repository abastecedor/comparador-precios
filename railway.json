{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "startCommand": "gunicorn --bind 0.0.0.0:$PORT --timeout 300 --workers 1 --threads 4 app:app",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300
    }
}